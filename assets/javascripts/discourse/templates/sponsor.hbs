<div class="sponsor-page">
  <div class="sponsor-amounts">
    <label for="sponsor-amount-input">{{i18n "discourse_plugin_name.sponsor.amount_label"}}</label>
    <div class="sponsor-amounts__presets">
      {{#each this.presetAmounts as |amount|}}
        <button
          type="button"
          class="btn btn-default"
          {{on "click" (fn this.selectPreset amount)}}
        >
          {{amount}}
        </button>
      {{/each}}
    </div>
    <input
      id="sponsor-amount-input"
      class="sponsor-amounts__input"
      type="number"
      inputmode="decimal"
      min="0"
      placeholder={{i18n "discourse_plugin_name.sponsor.custom_amount_placeholder"}}
      value={{this.amount}}
      {{on "input" this.updateAmount}}
    />
  </div>

  <div class="sponsor-payment-buttons">
    <button
      type="button"
      class="btn btn-primary"
      disabled={{this.isLoading}}
      {{on "click" (fn this.createOrder "alipay")}}
    >
      {{i18n "discourse_plugin_name.sponsor.alipay"}}
    </button>
    <button
      type="button"
      class="btn btn-primary"
      disabled={{this.isLoading}}
      {{on "click" (fn this.createOrder "wechat_pay")}}
    >
      {{i18n "discourse_plugin_name.sponsor.wechat"}}
    </button>
  </div>

  {{#if this.errorMessage}}
    <p class="sponsor-page__error">
      {{this.errorMessage}}
    </p>
  {{/if}}

  {{#if this.qrCodeUrl}}
    <div class="sponsor-page__qr">
      <p>{{i18n "discourse_plugin_name.sponsor.qr_code_label"}}</p>
      <img
        src={{this.qrCodeUrl}}
        alt={{i18n "discourse_plugin_name.sponsor.qr_code_alt"}}
      />
      {{#if this.paymentUrl}}
        <a
          href={{this.paymentUrl}}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-default sponsor-page__payment-link"
        >
          {{i18n "discourse_plugin_name.sponsor.payment_link"}}
        </a>
      {{/if}}
      <p class="sponsor-page__status">
        {{i18n "discourse_plugin_name.sponsor.payment_status"}}:
        {{this.orderStatus}}
      </p>
    </div>
  {{/if}}

  {{#if this.showThankYou}}
    <p class="sponsor-page__thanks">
      {{i18n "discourse_plugin_name.sponsor.thank_you"}}
    </p>
  {{/if}}

  <p class="sponsor-page__note">
    {{i18n "discourse_plugin_name.sponsor.footer_note"}}
  </p>
</div>
<section class="sponsor-page">
  <h1>{{i18n "discourse_plugin_name.sponsor.title"}}</h1>
  <p>{{i18n "discourse_plugin_name.sponsor.description"}}</p>
</section>
